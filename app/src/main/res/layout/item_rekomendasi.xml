<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/karturekomend"
        android:layout_width="355dp"
        android:layout_height="200dp"
        android:layout_marginBottom="12dp"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="28dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pic_rekomendasi"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:scaleType="fitXY"
                android:src="@drawable/fishandchips"/>

            <TextView
                android:id="@+id/tv_rekomendasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fish and Chips"
                android:fontFamily="@font/popinregular"
                android:textColor="#27231F"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                android:textSize="15dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>