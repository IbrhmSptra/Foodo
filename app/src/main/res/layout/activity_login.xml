<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".login">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_190sdp"
        android:fontFamily="@font/poppinbold"
        android:text="Email"
        android:textColor="#27231F"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintStart_toStartOf="@+id/etemail"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <EditText
        android:id="@+id/etemail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_33sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_33sdp"
        android:background="@drawable/etborder"
        android:fontFamily="@font/poppinslight"
        android:hint="Masukan Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingTop="4dp"
        android:textColor="#6F6F6F"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"></EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_33sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/poppinbold"
        android:text="Password"
        android:textColor="#27231F"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etemail"></TextView>

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_33sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_33sdp"
        android:background="@drawable/etborder"
        android:fontFamily="@font/poppinslight"
        android:hint="Masukan Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingTop="4dp"
        android:textColor="#6F6F6F"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"></EditText>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_33sdp"
        android:layout_marginEnd="@dimen/_33sdp"
        android:layout_marginTop="@dimen/_90sdp"
        android:background="@drawable/shape"
        android:fontFamily="@font/poppinbold"
        android:paddingTop="7dp"
        android:text="Login"
        android:textColor="#27231F"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etpassword"></Button>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:fontFamily="@font/poppinmedium"
        android:text="Belum Punya Akun?"
        android:textAlignment="center"
        android:textColor="#27231F"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintBottom_toTopOf="@+id/daftarbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login"></TextView>

    <TextView
        android:id="@+id/daftarbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinmedium"
        android:text="Daftar Di sini"
        android:textAlignment="center"
        android:textColor="#DE0001"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>