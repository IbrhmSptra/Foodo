<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tahap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="11dp"
            android:textColor="#DE0001"
            android:fontFamily="@font/popinregular"/>
        <TextView
            android:id="@+id/tv_cara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Potong daging ayam sesuai selera dan rebus mie instan hingga matang, sisihkan."
            android:textSize="11dp"
            android:fontFamily="@font/popinregular"
            android:textColor="#27231F"
            android:layout_marginLeft="3dp"/>
    </LinearLayout>

</LinearLayout>